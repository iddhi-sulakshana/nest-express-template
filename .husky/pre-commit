echo "🔍 Running Pre-commit checks..."

# Run formatter
pnpm run format

# Check for changes after formatting
if ! git diff --quiet; then
  echo "\033[33m🚫 Some files were changed by formatting."
  echo "💡 Please review and stage them before committing.\033[0m"
  exit 1
else
  echo "\033[32m✅ No changes after formatting.\033[0m"
fi